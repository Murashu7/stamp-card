extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    if user
      div
        a(href="/logout") #{user.username} をログアウト
      div
        a(href="/objectives/new") 目的を作る
      -var hasObjective = objectives.length > 0
      if hasObjective
        h3 あなたの目標一覧
        table
          thead
            tr
              th 目的
              th 頻度（週に何回）
              th 今日までの達成率
              th 期限
              th 期限までの達成率
          tbody
          each objective in objectives
            tr
              td
                a(href=`/objectives/${objective.objectiveId}/months/${monthName}`) #{objective.objectiveName}
              td #{objective.frequency}
              td #{objective.freqAchvRate_p} %
              td #{objective.formattedDueDay}
              td #{objective.objAchvRate_p} %
    else
      div
        a(href="/login") ログイン
